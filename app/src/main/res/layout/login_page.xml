<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/amz_squid_ink"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:contentDescription="Logo"
        android:src="@drawable/logo_no_background_white" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext_border"
        android:hint="Username"
        android:padding="12dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_border"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textColor="@color/amz_orange"
        android:layout_marginTop="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

<!--        &lt;!&ndash; Cancel Button &ndash;&gt;-->
<!--        <Button-->
<!--            android:id="@+id/cancel_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:text="CANCEL"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@color/black" />-->

        <!-- Next Button -->
        <Button
            android:id="@+id/signIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/amz_orange"
            android:text="Sign In"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/ref_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New here? Create an account"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/amz_orange"
        android:layout_marginTop="30dp"/>



</LinearLayout>