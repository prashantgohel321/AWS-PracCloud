<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    Pressed state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/amz_white"/> <!-- White Background -->
            <corners android:radius="20dp"/> <!-- Rounded Corners -->
            <stroke android:width="2dp" android:color="#FFA500"/> <!-- Orange Border -->
        </shape>
    </item>

    <!--    Default-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/amz_orange"/> <!-- Orange Background -->
            <corners android:radius="20dp"/> <!-- Rounded Corners -->
            <stroke android:width="2dp" android:color="#FFA500"/> <!-- Orange Border -->
        </shape>
    </item>
</selector>